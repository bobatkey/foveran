foldNat : (A : Set 1) → A → (A → A) → Nat → A ;
foldNat A a f = induction NatDesc (λx. A)
                          (λx. case x for x. lift NatDesc Nat (λx. A) x → A with
                                  { inl u. λu'. a
				  ; inr x. λa. f a
                                  });

