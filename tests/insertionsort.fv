natInduction : (P : Nat → Set 2) →
               (P zero) →
               ((n : Nat) → P n → P (succ n)) →
               (n : Nat) → P n;
natInduction P p0 pS =
  induction NatDesc P
            (\x. case x for x. lift NatDesc Nat P x → P (construct x) with
                    { inl u. \u'. p0
                    ; inr n. \pn. pS n pn
                    });

Le : Nat → Nat → Set ;
Le = natInduction (λx. Nat → Set)
                  (\y. Unit)
                  (\n f. caseNat2 Set Empty f);

owotoNat : (x y : Nat) → (P : Set) →
           (Le x y → P) →
           (Le y x → P) →
           P ;
owotoNat x y P =
  natInduction
    (\x. (y : Nat) → (Le x y → P) → (Le y x → P) → P)
    (\y ple pge. ple ())
    (\x f.
        natInduction
          (\n. (Le (succ x) n → P) → (Le n (succ x) → P) → P)
          (\ple pge. pge ())
          (\y g ple pge. f y ple pge))
    x
    y;

